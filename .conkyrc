##############################################
# Settings
##############################################
background yes
use_xft yes
xftfont Liberation Sans:size=9
xftfont Terminus:size=8

xftalpha 0.8
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
#own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 200 200
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color ffffff
default_shade_color 000000
default_outline_color 828282
alignment top_right
gap_x 12
gap_y 10 
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no

##############################################
#  Output
##############################################
TEXT
S Y S T E M    I N F O
${hr}
Host $alignr$nodename
LAN ${alignr}${addr wlp2s0}
WAN ${alignr}${execi 3600 wget -O - ifconfig.co}
BAT ${alignr}${battery_time}
$stippled_hr
${color}Battery $alignr${color white}${battery_bar 8,175}
${color}CPU     $alignr${color white}${cpubar 8,175}
${color}RAM     $alignr${color white}${membar 8,175}
${color}/home   $alignr${color white}${fs_bar 8,175 /home}
${color}/       $alignr${color white}${fs_bar 8,175 /}

